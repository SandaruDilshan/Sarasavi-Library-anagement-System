<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Sarasavi_Library_anagement_System.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Sarasavi_Library_anagement_System"
    xmlns:pages="clr-namespace:Sarasavi_Library_anagement_System.Pages"
    Shell.FlyoutBehavior="Locked"
    Shell.BackgroundColor="Navy"
    Shell.FlyoutBackgroundColor="Navy"
    Title="Sarasavi Library"> 

    <ShellContent
        Title="Home"
        Icon="home.png"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage"
        Shell.TitleColor="White"
        />

    <ShellContent
        Title="Notifications"
        Shell.TitleColor="White"
        Icon="alarm.png"
        ContentTemplate="{DataTemplate pages:UserNotification}"
        Route="UserNotification" />

    <ShellContent
        Title="Reservation"
        Shell.TitleColor="White"
        ContentTemplate="{DataTemplate pages:UserReservationPage}"
        Route="UserxReservationPage" />

    <Shell.FlyoutFooter>
        <Image 
            Source="logout.png"
            HeightRequest="20"
            WidthRequest="20"
            Margin="0,0,250,25" />

    </Shell.FlyoutFooter>
</Shell>
